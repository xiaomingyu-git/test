{
    "version": "1.0",
    "description": "Skill activation triggers for Claude Code. Controls when skills automatically suggest or block actions.",
    "skills": {
        "skill-developer": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Meta-skill for creating and managing Claude Code skills",
            "promptTriggers": {
                "keywords": [
                    "skill system",
                    "create skill",
                    "add skill",
                    "skill triggers",
                    "skill rules",
                    "hook system",
                    "skill development",
                    "skill-rules.json"
                ],
                "intentPatterns": [
                    "(how do|how does|explain).*?skill",
                    "(create|add|modify|build).*?skill",
                    "skill.*?(work|trigger|activate|system)"
                ]
            }
        },
          "vue-dev-guidelines": {
            "type": "guardrail",
            "enforcement": "block",
            "priority": "high",
            "description": "Vue 3 + Vite + Element Plus + Composition API + TypeScript best practices",
            "promptTriggers": {
                "keywords": [
                    "vue component",
                    "vue",
                    "vue 3",
                    "composition api",
                    "script setup",
                    "composable",
                    "pinia",
                    "vue router",
                    "nuxt",
                    "element plus",
                    "el-button",
                    "el-form",
                    "el-table",
                    "el-card",
                    "element-ui",
                    "element",
                    "interface",
                    "page",
                    "modal",
                    "dialog",
                    "form",
                    "component",
                    "frontend",
                    "styling",
                    "ref",
                    "reactive",
                    "computed",
                    "watch",
                    "vue directive",
                    "v-if",
                    "v-for",
                    "v-model",
                    "vue template",
                    "vue lifecycle",
                    "vue store"
                ],
                "intentPatterns": [
                    "(create|add|make|build|update|modify|edit).*?(vue component|composable|pinia store|vue page|component|UI|page|modal|dialog|form)",
                    "(how to|best practice).*?(vue|composition api|script setup|element plus|component|UI)",
                    "(implement|use).*?(ref|reactive|computed|watch|pinia|vue router)",
                    "(style|design|layout).*?(element plus|el-|vue component|UI|component)",
                    "(debug|fix).*?(vue component|composable|reactivity)",
                    "(organize|structure).*?(vue project|vue app|frontend)",
                    "(create|add|component|UI).*?(component|UI|page|modal|dialog|form)",
                    "(how to|best practice).*(component|UI|frontend)"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "src/**/*.vue",
                    "src/**/*.ts",
                    "src/**/*.tsx",
                    "components/**/*.vue",
                    "components/**/*.ts",
                    "components/**/*.tsx",
                    "composables/**/*.ts",
                    "composables/**/*.tsx",
                    "stores/**/*.ts",
                    "router/**/*.ts",
                    "views/**/*.vue",
                    "views/**/*.tsx",
                    "pages/**/*.vue",
                    "pages/**/*.tsx",
                    "frontend/src/**/*.tsx",
                    "frontend/src/**/*.ts",
                    "client/src/**/*.tsx",
                    "client/src/**/*.ts",
                    "ui/**/*.vue",
                    "ui/**/*.ts",
                    "ui/**/*.tsx"
                ],
                "pathExclusions": [
                    "**/*.test.ts",
                    "**/*.spec.ts",
                    "**/*.test.js",
                    "**/*.spec.js",
                    "**/node_modules/**",
                    "**/dist/**"
                ],
                "contentPatterns": [
                    "<script setup",
                    "defineProps",
                    "defineEmits",
                    "defineComponent",
                    "from 'vue'",
                    "from '@vue'",
                    "import.*ref.*from.*vue",
                    "import.*reactive.*from.*vue",
                    "import.*computed.*from.*vue",
                    "from 'element-plus'",
                    "import.*El[A-Z].*from.*element-plus",
                    "ElButton",
                    "ElCard",
                    "ElForm",
                    "ElInput",
                    "ElTable",
                    "ElMessage",
                    "ElMessageBox",
                    "el-",
                    "useStore",
                    "createPinia",
                    "vue-router",
                    "createRouter",
                    "useRouter",
                    "useRoute",
                    "React\\.FC",
                    "useState",
                    "useEffect",
                    "v-model",
                    "v-if",
                    "v-for",
                    "v-show",
                    "@click",
                    "template.*ref"
                ]
            },
            "blockMessage": "âš ï¸ BLOCKED - Vue Development Best Practices Required\n\nðŸ“‹ REQUIRED ACTION:\n1. Use Skill tool: 'vue-dev-guidelines'\n2. Review Vue 3 + Composition API patterns\n3. Check Element Plus component usage\n4. Follow TypeScript best practices for Vue\n5. Then retry this edit\n\nReason: Enforce Vue 3 + Element Plus best practices\nFile: {file_path}\n\nðŸ’¡ TIP: Add '// @skip-vue-validation' comment to skip future checks",
            "skipConditions": {
                "sessionSkillUsed": true,
                "fileMarkers": [
                    "@skip-vue-validation"
                ],
                "envOverride": "SKIP_VUE_GUIDELINES"
            }
        },
        "error-tracking": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Frontend error tracking and monitoring patterns for Vue applications",
            "promptTriggers": {
                "keywords": [
                    "error handling",
                    "exception",
                    "sentry",
                    "error tracking",
                    "captureException",
                    "monitoring",
                    "performance tracking",
                    "vue error",
                    "frontend error"
                ],
                "intentPatterns": [
                    "(add|create|implement|setup).*?(error handling|sentry|error tracking|vue error)",
                    "(fix|handle|catch).*?(error|exception|frontend error)",
                    "(how to|best practice).*?(error|sentry|monitoring|vue error)"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "src/**/*.vue",
                    "src/**/*.ts",
                    "src/**/*.js",
                    "plugins/**/*.ts",
                    "utils/**/*.ts"
                ],
                "pathExclusions": [
                    "**/*.test.ts",
                    "**/*.spec.ts"
                ],
                "contentPatterns": [
                    "@sentry",
                    "Sentry\\.",
                    "captureException",
                    "captureMessage",
                    "onErrorCaptured",
                    "errorHandler",
                    "app\\.config\\.errorHandler",
                    "window\\.onerror",
                    "window\\.onunhandledrejection"
                ]
            }
        }
    },
    "notes": {
        "enforcement_types": {
            "suggest": "Skill suggestion appears but doesn't block execution",
            "block": "Requires skill to be used before proceeding (guardrail)",
            "warn": "Shows warning but allows proceeding"
        },
        "priority_levels": {
            "critical": "Highest - Always trigger when matched",
            "high": "Important - Trigger for most matches",
            "medium": "Moderate - Trigger for clear matches",
            "low": "Optional - Trigger only for explicit matches"
        },
        "customization": {
            "pathPatterns": "Adjust to match your project structure (blog-api, auth-service, etc.)",
            "keywords": "Add domain-specific terms relevant to your project",
            "intentPatterns": "Use regex for flexible user intent matching"
        }
    }
}
